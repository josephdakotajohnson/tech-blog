<div class="text-center">
  <h2>{{title}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{post}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>

  <form class="form comment-form">
    <label class="" for=''>Comment below:</label>
    <textarea class='textarea-styling' id='comment' rows="15" cols="200"></textarea>
    <button class='btn btn-primary' type='submit' id="comment-button">Post</button>
  </form>
  <h3>Comments</h3>
  {{#each comments as |comment|}}
    <p>
      {{comment.text}}
    </p>
    <p>
      {{comment.user.username}} wrote this on {{format_date comment.date_created}} {{!-- format_date is located in the utils/helpers.js file --}}
    </p>
  {{/each}}
  {{!-- <p>
    <button class="btn btn-primary">Fund this Project!</button>
  </p> --}}
</div>

<script src="../js/comment.js"></script>
